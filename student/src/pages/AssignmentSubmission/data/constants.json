
{
  "fileTypes": {
    "documents": [".pdf", ".doc", ".docx", ".txt", ".rtf"],
    "code": [".java", ".cpp", ".c", ".py", ".js", ".ts", ".html", ".css", ".sql"],
    "archives": [".zip", ".tar.gz", ".rar", ".7z"],
    "images": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".svg"],
    "videos": [".mp4", ".avi", ".mov", ".wmv", ".flv"],
    "spreadsheets": [".xlsx", ".xls", ".csv"],
    "presentations": [".pptx", ".ppt"],
    "models": [".h5", ".pkl", ".joblib", ".model"],
    "notebooks": [".ipynb"]
  },
  "maxFileSizes": {
    "small": "5MB",
    "medium": "10MB",
    "large": "20MB",
    "xlarge": "50MB",
    "xxlarge": "100MB"
  },
  "assignmentStatuses": {
    "pending": {
      "label": "Pending",
      "color": "orange",
      "description": "Assignment is not yet submitted"
    },
    "submitted": {
      "label": "Submitted",
      "color": "blue",
      "description": "Assignment has been submitted for review"
    },
    "graded": {
      "label": "Graded",
      "color": "green",
      "description": "Assignment has been graded and feedback provided"
    },
    "overdue": {
      "label": "Overdue",
      "color": "red",
      "description": "Assignment submission deadline has passed"
    }
  },
  "gradeRanges": {
    "excellent": { "min": 90, "max": 100, "label": "Excellent", "color": "green" },
    "good": { "min": 80, "max": 89, "label": "Good", "color": "blue" },
    "satisfactory": { "min": 70, "max": 79, "label": "Satisfactory", "color": "yellow" },
    "needsImprovement": { "min": 60, "max": 69, "label": "Needs Improvement", "color": "orange" },
    "poor": { "min": 0, "max": 59, "label": "Poor", "color": "red" }
  },
  "validationRules": {
    "maxFilesPerSubmission": 10,
    "allowedFileSize": 104857600,
    "minFileNameLength": 1,
    "maxFileNameLength": 255,
    "maxCommentLength": 1000
  }
}

